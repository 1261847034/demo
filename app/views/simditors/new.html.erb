<%= javascript_include_tag 'simditor_beforebody' %>
<%= stylesheet_link_tag 'simditor_beforebody' %>

<div class="sky-form">
  <%= form_for @article, url: simditors_path, method: :post do |f| %>
      <fieldset>
        <section>
          <label class="label"><strong>内容</strong></label>
          <%= f.text_field :content, :type=> 'hidden'%>
        </section>
        <section class="pull-right">
          <%= f.submit '保存', :class => 'btn-u btn-lg' %>
        </section>
      </fieldset>
  <% end %>
</div>
<script type="text/javascript">
    var editor = new Simditor({
        textarea: $('#simditor_article_content'),
        toolbar: ['title', 'bold', 'italic', 'underline', 'strikethrough', 'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', 'link','image', '|','hr','indent','outdent','alignment','fullscreen'],
        placeholder: '这里输入文字...',
        pasteImage: true,
        fileKey: 'file',
        upload: {
            url: '/simditors/upload',
            params: null,
            connectionCount: 3,
            leaveConfirm: 'Uploading is in progress, are you sure to leave this page?'
        }
    });
</script>